@model Project_TL.ViewModels.AddApplicationToHotelViewModel

@{
    ViewBag.Title = "AddHotel";
}
<script src="../../Scripts/jquery-1.3.2.min.js" language="javascript" type="text/javascript"></script>
<script src="../../Scripts/jquery-ui-1.7.1.custom.min.js" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    <br />
    <br />
    <h2>Add hotel to Application</h2>


    <table class="table">
        <tr>
            <th>
               
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Applications.FirstOrDefault().Name)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.Applications.FirstOrDefault().Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Applications.FirstOrDefault().StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Applications.FirstOrDefault().EndDate)
            </th>
        </tr>

        @for (int i = 0; i < Model.Applications.Count(); i++)
        {

            <tr>

                <td>
                    @Html.EditorFor(item => item.Applications[i].Checked, new { @class = "form-control", required = "required" })
                </td>
                <td>
                    @Html.DisplayFor(item => item.Applications[i].Name)
                </td>                
                <td>
                    <div class="col-md-10 form-group">
                        @Html.EditorFor(item => item.Applications[i].Cost, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(item => item.Applications[i].Cost, "", new { @class = "text-danger" })
                    </div>
                </td>
               
                <td>
                    @Html.EditorFor(item => item.Applications[i].StartDate, new { HtmlAttributes = new { @class = "datefield", type = "date", value = DateTime.Today.ToShortDateString() } })
                </td>
                <td>
                    @Html.EditorFor(item => item.Applications[i].EndDate, new { HtmlAttributes = new { @class = "datefield", type = "date", value = DateTime.Today.ToShortDateString() } })
                </td>
                <td class="hidden">
                    @Html.HiddenFor(item => item.Applications[i].ApplicationId)
                </td>
            </tr>
           
        }

    </table>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div class="btn btn-warning">
                @Html.ActionLink("back", "Index", "Search", new { Style = "color:white" })
            </div>
            <input type="submit" value="Add" class="btn btn-success" />
        </div>
    </div>
}


