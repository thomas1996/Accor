@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron row">
    <div class="col-md-6">
        <img src="~/Content/images/logo-accor.png" style="max-width:100%" />
    </div>
    <div class="col-md-6">
        @if (!Request.IsAuthenticated)
        {
            <h1>HGBox</h1>
            <p class="lead">HGBox is een online platform van de faculteit Mens &amp; Welzijn om didactisch materiaal te reserveren voor stages. Indien u tot deze faculteit behoort kunt u via onderstaande knop aanmelden.</p>
            <p>
                <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg">Aanmelden &raquo;</a>
            </p>
        }
        else
        {
            <h1>Materiaal reserveren</h1>
            <p>
                U kan materiaal reserveren door eerst het gewenste materiaal op te zoeken en vervolgens het toe te voegen aan uw verlanglijst. <br />
                Als al het materiaal dat u nodig heeft in de verlanglijst staat kan u vervolgens de hele verlanglijst reserveren.<br /><br />
                Druk op onderstaande knop om te beginnen.
            </p>
            <p>
                <a href="@Url.Action("Index", "Material")" class="btn btn-primary btn-lg">Materiaal opzoeken &raquo;</a>
            </p>
        }
    </div>
</div>


<div class="row">
    <div class="col-md-4">
        <h2>Handleiding</h2>
        <p>
            Indien u nog niet met dit systeem gewerkt heeft, kan u via onderstaande knop een korte handleiding bekijken.
        </p>
        <p>
            <a class="btn btn-default" href="@Url.Action("Begin", "Tutorial")">Handleiding &raquo;</a>
        </p>
    </div>
    @if (!Request.IsAuthenticated)
    {
        <div class="col-md-4">
            <h2>Aan de slag!</h2>
            <p>Via onderstaande knop kan u materiaal opzoeken om uiteindelijk te reserveren.</p>
            <p>
                <a class="btn btn-default" href="@Url.Action("Index", "Material")">Nu materiaal opzoeken! &raquo;</a>
            </p>
        </div>
    }
</div>