@model Project_TL.Views.Report.ReportViewModel

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/Hotels.css" rel="stylesheet" type="text/css" />
<link href="~/Content/theme.css" rel="stylesheet" type="text/css" />
<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
<link href="~/Content/Other.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/Own Scripts/DataTable.js"></script>
<script src="~/Scripts/Own Scripts/Search.js"> </script>
<script src="../../Scripts/jquery-1.3.2.min.js" language="javascript" type="text/javascript"></script>
<script src="../../Scripts/jquery-ui-1.7.1.custom.min.js" type="text/javascript"></script>
<html>
<body>
<h2>Make Report</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <table class="table table-hover table-bordered table-responsive" id="example">
        <thead>
            <tr class="alert-info">
             <th>
            </th>
           
             <th>
                @Html.NameFor(model => model.List.FirstOrDefault().HotelName)
             </th>
                <th>
                    @Html.NameFor(model => model.List.FirstOrDefault().OwnerName)
                </th>
                <th>
                    @Html.NameFor(model => model.List.FirstOrDefault().BranchName)
                </th>
                <th class="hidden"></th>
                <th class="hidden"></th>
                <th class="hidden"></th>
</tr>
        </thead>
        <tfoot>
            <tr>
                <th>
                </th>

                <th>
                    @Html.NameFor(model => model.List.FirstOrDefault().HotelName)
                </th>
                <th>
                    @Html.NameFor(model => model.List.FirstOrDefault().OwnerName)
                </th>
                <th>
                    @Html.NameFor(model => model.List.FirstOrDefault().BranchName)
                </th>
             
            </tr>
        </tfoot>
        <tbody>
            @for (int i = 0; i < Model.List.Count(); i++)
            {
                <tr>
                    <td>
                        @Html.EditorFor(item => item.List[i].Checked)
                    </td>
                    <td>
                        @Html.DisplayFor(item => item.List[i].HotelName)
                    </td>
                    <td>
                        @Html.DisplayFor(item => item.List[i].OwnerName)
                    </td>
                    <td>
                        @Html.DisplayFor(item => item.List[i].BranchName)
                    </td>
                    <td class="hidden">
                        @Html.HiddenFor(item => item.List[i].HotelId)
                    </td>
                    <td class="hidden">
                        @Html.HiddenFor(item => item.List[i].BranchId)
                    </td>
                    <td class="hidden">
                        @Html.HiddenFor(item => item.List[i].OwnerId)
                    </td>
                </tr>
            }
        </tbody>
        </table>
    <br />
    <div>
        <b>Please select the start end end date for the report</b>
        <br />
<br />
        <p>
        @Html.EditorFor(item => item.StartDate, new { HtmlAttributes = new { @class = "datefield", type = "date", value = DateTime.Today.ToShortDateString() } })
        @Html.EditorFor(item => item.EndDate, new { HtmlAttributes = new { @class = "datefield", type = "date", value = DateTime.Today.ToShortDateString() } })
    </p>
            </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Make report" class="btn btn-success"  />
        </div>
    </div>
}
</body>
</html>