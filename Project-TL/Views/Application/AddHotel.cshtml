@model Project_TL.ViewModels.Application.AddHotelToApplicationViewModel

@{
    ViewBag.Title = "AddHotel";
}
<script src="../../Scripts/jquery-1.3.2.min.js" language="javascript" type="text/javascript"></script>
<script src="../../Scripts/jquery-ui-1.7.1.custom.min.js" type="text/javascript"></script>
@using (Html.BeginForm("addHotel","Application",FormMethod.Post,new { iahtavmd = Model }))
{
    @Html.AntiForgeryToken()
<br />
<br />
<br />
<h2>Add hotel to Application</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Checked)
        </th>
        <th>
            Name
        </th>
        <th>
            Owner
        </th>
        <th>
            Contact Person
        </th>
        <th>
            Costprice
        </th>
        <th>
            Startdate
        </th>
        <th>
          
            Enddate
        </th>
    </tr>

@foreach (var item in Model.Hotels)
{
    <tr>
        <td>
            @Html.EditorFor(modelItem => modelItem.Checked)
        </td>
        <td>
            @Html.DisplayFor(modelitem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelitem => item.Owner.LastName) @Html.DisplayFor(modelitem => item.Owner.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelitem => item.ContactPerson.LastName) @Html.DisplayFor(modelitem => item.ContactPerson.FirstName)
        </td>
        <td>   
            <div class="col-md-10 form-group">
                @Html.EditorFor(model => model.Cost, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cost, "", new { @class = "text-danger" })
            </div>
        </td>
        <td>
        @Html.EditorFor(model => model.StartDate, new { HtmlAttributes = new { @class = "datefield", type = "date" } })
        </td>
        <td>
            @Html.EditorFor(model => model.StartDate, new { HtmlAttributes = new { @class = "datefield", type = "date" } })
        </td>
      
    </tr>
}

</table>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Add" class="btn btn-default" />
    </div>
</div>
}
