@model IEnumerable<Project_TL.ViewModels.Application.ApplicationViewModel>
<link href="~/Content/Hotels.css" rel="stylesheet" type="text/css" />
<link href="~/Content/theme.css" rel="stylesheet" type="text/css" />
<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
<link href="~/Content/Other.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/Own Scripts/DataTable.js"></script>
<script src="~/Scripts/Own Scripts/Search.js"> </script>
@{
    ViewBag.Title = "Index";
}
<html>
<body>

    <br />
    <br />
    <br />
    <h2>Applications</h2>

    <p>
        @Html.ActionLink("Create New Application", "Create")
    </p>
    <table class="table table-hover table-bordered table-responsive" id="example">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    Total price
                </th>
                
                <th>
                    Number off hotels 
                </th>
                
                <th></th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>               
                <th>
                    Number off hotels
                </th>
                
                
            </tr>
        </tfoot>
        <tbody>
           

            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfHotels)
                    </td>
                   
                    <td>
                        @Html.ActionLink("Edit", "Edit", new {  id=item.Id }) |
                        @Html.ActionLink("Details", "Details", new {  id=item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id  })
                    </td>
                </tr>
            }
        </tbody>

    </table>
</body>
</html>
